<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 10px 0;
    }
    nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      justify-content: center;
    }
    nav ul li {
      margin: 0 10px;
    }
    nav ul li a, nav ul li button {
      color: white;
      text-decoration: none;
    }
    .container {
      width: 80%;
      margin: 20px auto;
    }
    .product {
      background: white;
      border: 1px solid #ddd;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .product img {
      max-width: 100%;
      height: auto;
      border-radius: 5px;
    }
    .product h3 {
      margin: 0 0 10px 0;
    }
    .product p {
      margin: 0;
    }

    .product img {
      max-width: 100%;
      max-height: 300px;
      height: auto;
      display: block;
      margin: 0 auto;
    }

    .coupon-form {
      background: white;
      border: 1px solid #ddd;
      padding: 15px;
      margin: 20px auto;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      max-width: 600px;
    }

    .coupon-form h3 {
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    .coupon-form form {
      display: block; 
      text-align: center; 
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    }

    .coupon-form .message {
      margin-top: 20px;
      color: #333; 
      background-color: #f4f4f4; 
      border: 1px solid #ddd; 
      border-radius: 4px; 
      padding: 10px; 
      text-align: center; 
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
    }

    .coupon-form input[type="text"] {
      padding: 10px;
      margin-right: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }

    .coupon-form input[type="text"], .coupon-form button {
      width: 90%; 
      margin: 10px 0; 
      
    }


    button {
      background-color: #5c6bc0; 
      color: #fff; 
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #3f51b5; 
    }

    .user-info {
      background: white;
      border: 1px solid #ddd;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      margin: 20px auto;
  }

    .user-info h2 {
      color: #333;
      text-align: center;
      margin-bottom: 20px;
  }

    .user-info p {
      color: #666;
      margin: 10px 0;
      font-size: 16px;
  }

    .user-info p strong {
      color: #333;
      font-weight: normal;
  }

  </style>
</head>
<body>
{{> header }}

<main>
    {{{body}}}
</main>

</body>
</html>
